<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <theme>dark</theme>
        <encoding>UTF-8</encoding>
        <documentTitle>My Comprehensive Test Report</documentTitle>
        <reportName>Automation Test Results</reportName>
        <testViewChartLocation>bottom</testViewChartLocation>

        <styles>
            <![CDATA[
                /* Custom CSS for report styling */
                body {
                    font-family: Arial, sans-serif;
                    background-color: #222;
                    color: #fff;
                }
                h1, h2, h3 {
                    color: #007bff;
                }
                .extent-test-view .test-content {
                    background-color: #333;
                }
            ]]>
        </styles>

        <scripts>
            <![CDATA[
                /* Custom JavaScript for report interactivity */
                $(document).ready(function() {
                    // Example: Add a click event to a button
                    $('#myCustomButton').click(function() {
                        alert('Button clicked!');
                    });
                });
            ]]>
        </scripts>

        <reportHierarchy>
            <category name="Functional Tests">
                <group name="Smoke Tests">
                    <test name="Login Test"/>
                    <test name="Homepage Test"/>
                </group>
                <group name="Regression Tests">
                </group>
            </category>
            <category name="Performance Tests">
            </category>
        </reportHierarchy>

        <systemInfo>
            <entry key="Environment" value="Test Environment"/>
            <entry key="Browser" value="Chrome"/>
            <entry key="OS" value="Windows 10"/>
        </systemInfo>

        <attachments>
            <file path="report_logo.png" type="image/png" name="Report Logo"/>
            <file path="test_data.csv" type="text/csv" name="Test Data"/>
        </attachments>
    </configuration>
</extentreports>